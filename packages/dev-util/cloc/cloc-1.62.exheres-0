require sourceforge [ suffix=pl ]

SUMMARY="Count Lines Of Code"
HOMEPAGE="http://${PN}.sourceforge.net"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
        dev-perl/Algorithm-Diff
        dev-perl/Regexp-Common
        dev-perl/Digest-Perl-MD5
"

src_unpack() {
    edo mkdir ${WORK}
    edo cp ${FETCHEDDIR}/${ARCHIVES} ${WORK}
}

src_prepare() {
    # rename
    edo mv ${ARCHIVES} cloc
}

src_install() {
    dobin cloc
}

