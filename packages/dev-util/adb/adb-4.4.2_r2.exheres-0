SCM_TAG="android-${PV}"
SCM_REPOSITORY="http://android.googlesource.com/platform/system/core.git"
SCM_CHECKOUT_TO="android-system-core"

require scm-git

SUMMARY="Android debug bridge"
HOMEPAGE="https://android.googlesource.com/platform/system/core"

LICENCES="Apache-2.0"
SLOT="0"
PLATFORMS="~amd64"

DEPENDENCIES="
    build+run:
        dev-libs/openssl
        sys-libs/glibc
        sys-libs/zlib
"

src_compile() {
    pushd adb

    edo cp "${FILES}"/Makefile .
    emake

    popd
}

src_install() {
    exeinto /usr/bin
    doexe adb/adb
}

